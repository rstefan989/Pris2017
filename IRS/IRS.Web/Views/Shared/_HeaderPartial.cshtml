@model IRS.Web.ViewModels.Common.ViewModelBase

<div class="navbar navbar-background">
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a href="@Url.Action("Index", "Home", new { area = "" })" class="links">
                <img alt="Home Page" src="~/Content/Images/ARS/Common/ars-logo.gif" />
            </a>
        </div>
        @if (Request.IsAuthenticated)
        {
            <div class="collapse navbar-collapse">
                
                <ul class="nav navbar-nav">
                    @if (IsAdmin)
                    {
                        <li class="dropdown">
                            <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                                @Labels.Admin<span class="caret"></span>
                            </a>
                            <ul class="dropdown-menu">
                                <li>@Html.ActionLink("HOME", "Index", "Home", new { area = "Admin" }, null)</li>
                            </ul>
                        </li>
                    }
                    else
                    {
                        <li>@Html.ActionLink("HOME", "Index", "Home", null, null)</li>
                    }
                </ul>
                
                @Html.Partial("_LoginPartial")
            </div>
        }
    </div>
</div>
