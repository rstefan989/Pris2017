@model IRS.Web.ViewModels.Auction.AuctionListViewModel
@using YuSpin.Fw.Web

@{
    ViewBag.Title = "My Items";
}

<div data-bind="with: myItems.viewModel">  
    <table id="myItemsTable" class="table table-striped table-bordered" cellspacing="0" width="100%">
        <thead>
        <tr>
            <th>@Labels.Name</th>
            <th>Starting Price</th>
            <th>End Date</th>
            <th>Category</th>
            <th>Edit</th>
        </tr>
        </thead>
    </table>
    <input type="button" class="btn btn-info" value="Add new +" onclick="location.href='@Url.Action("AddEditItem", "Home")'" />
</div>

@section Scripts {
    @Scripts.Render("~/bundles/myItemsjs")
    <script type="text/javascript">
        @{
            var data = JsonHelper.Convert(Model);
            @Html.Raw($"myItems.init('{data}');");
        }
    </script>
}