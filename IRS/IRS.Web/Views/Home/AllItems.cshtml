@model IRS.Web.ViewModels.Auction.AuctionListViewModel
@using YuSpin.Fw.Web

@{
    ViewBag.Title = "All items";
}

<div data-bind="with: allItems.viewModel">   
    <table id="allItemsTable" class="table table-striped table-bordered" cellspacing="0" width="100%">
        <thead>
        <tr>
            <th>@Labels.Name</th>
            <th>Starting Price</th>
            <th>End Date</th>
            <th>User</th>
            <th>Category</th>
            <th>Bid</th>
            <th>Rate</th>
        </tr>
        </thead>
    </table>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/allItemsjs")
    <script type="text/javascript">
        @{
            var data = JsonHelper.Convert(Model);
            @Html.Raw($"allItems.init('{data}');");
        }
    </script>
}