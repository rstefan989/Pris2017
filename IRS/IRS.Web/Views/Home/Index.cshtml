@model IRS.Web.ViewModels.Auction.AuctionListViewModel
@using YuSpin.Fw.Web

@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>PRIS- Safari</h1>
    <p class="lead">Welcome to Safari auction house application.</p>
</div>
<div data-bind="with: home.viewModel">   
    <table id="homeTable" class="table table-striped table-bordered" cellspacing="0" width="100%">
        <thead>
        <tr>
            <th>@Labels.Name</th>
            <th>Last Bid</th>
            <th>Starting Price</th>
        </tr>
        </thead>
    </table>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/homejs")
    <script type="text/javascript">
        @{
            var data = JsonHelper.Convert(Model);
            @Html.Raw($"home.init('{data}');");
        }
    </script>
}