@model IRS.Web.ViewModels.Account.LoginViewModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = Labels.Login;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@Labels.Login</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/Site.css" rel="stylesheet" />
    <link href="~/Content/login.css" rel="stylesheet" />
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col-sm-6 col-sm-offset-3">
                <div class="text-center login-title">@Html.PageTitle(Labels.Signin)</div>
                <br />
                <div class="account-wall">
                    <img class="profile-img" src="~/Content/Images/login-photo.png"
                         alt="">
                    @using (Html.BeginForm("Login", "Account", FormMethod.Post, new { @class = "form-signin" }))
                    {
                        @Html.AntiForgeryToken()
                        <div class="form-group">
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @placeholder = Labels.Email, autofocus = "autofocus" })
                        </div>
                        <div class="form-group">
                            @Html.TextBoxFor(m => m.Password, new { @class = "form-control", @placeholder = Labels.Password, type = "password", autocomplete = "off" })
                        </div>
                        <button class="btn btn-lg btn-primary btn-block" type="submit">
                            @Labels.Login
                        </button>
                        <span class="clearfix"></span>
                        @Html.HiddenFor(m => m.ReturnUrl);
                    }
                </div>
            </div>
        </div>
    </div>
</body>
</html>
